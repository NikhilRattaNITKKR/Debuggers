<script>


    function postdata(id){

      fetch(`/events/${id}`)
      .then(response => response.json())
      .then(async (data) =>{




        console.log(data);
        console.log(data.data.desc);
        $('.post-desc-p').html(data.data.desc);
        
        $('.right-post').fadeTo("slow",1);
        $('.left-post').fadeTo("slow",1);
      })

    }




</script>








